{
  "name": "apollo-server",
  "version": "0.0.0",
  "description": "GraphQL Server",
  "main": "dist/index.js",
  "repository": "https://github.com/reapit/graphql-app.git",
  "author": "reapit global",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "apollo-server": "^2.9.13",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^0.7.1",
    "graphql-type-json": "^0.3.1",
    "serverless": "^1.60.5",
    "serverless-http": "^2.3.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "scripts": {
    "dev": "cross-env REAPIT_ENV=LOCAL nodemon",
    "build": "cross-env NODE_ENV=production && rimraf dist && webpack --color --mode production --config ./webpack.config.js",
    "start": "node ./dist/app.js",
    "test": "jest --coverage --silent",
    "test:ci": "jest --coverage --silent --detectOpenHandles --forceExit",
    "deploy:dev": "cross-env CI=true && yarn build && yarn test && serverless deploy --stage dev",
    "deploy:prod": "cross-env CI=true && yarn build && yarn test && serverless deploy --stage prod"
  },
  "devDependencies": {
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/graphql-type-json": "^0.3.2",
    "@types/node-fetch": "^2.5.4",
    "@types/uuid": "^3.4.6",
    "concurrently": "^5.0.1",
    "nodemon": "^2.0.2",
    "ts-node": "^8.5.4",
    "tsdx": "^0.11.0",
    "webpack-node-externals": "^1.7.2"
  }
}
