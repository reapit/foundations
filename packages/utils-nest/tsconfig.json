{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"],
    "baseUrl": "./",
    "sourceRoot": "/",
    "paths": {
      "@reapit/connect-session-server": ["../connect-session-server"]
    },
    "declaration": true,
    "declarationDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["dist", "src/scripts", "node_modules", "src/tests/coverage", "../connect-session/**/*"]
}
