{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "typeRoots": ["./src/core/definitions.d.ts", "node_modules/@types", "../../node_modules/@types"],
    "baseUrl": "./",
    "sourceRoot": "/",
    "paths": {
      "@/*": ["src/*"],
      "@reapit/*": ["../*"]
    },
    "declaration": true,
    "declarationDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist"
  },
  "include": [
    "src",
    "../payments-service/src/core/billing-interceptor",
    "../payments-service/src/core/billing-interceptor.ts"
  ],
  "exclude": ["public", "dist", "src/scripts", "node_modules", "src/tests/coverage", "../connect-session/**/*"]
}
