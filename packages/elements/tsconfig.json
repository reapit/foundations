{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "declaration": true,
    "moduleResolution": "node",
    "types": ["jest", "node", "react"],
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es2015", "es2017", "dom", "es5", "es6", "esnext"],
    "outDir": "dist",
    "sourceRoot": "/"
  },
  "include": ["src", "public"]
}
