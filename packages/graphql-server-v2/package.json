{
  "name": "graphql-server-v2",
  "version": "2.0.0",
  "private": true,
  "description": "GraphQL Server",
  "repository": "https://github.com/reapit/foundations.git",
  "license": "MIT",
  "author": "reapit global",
  "main": "dist/index.js",
  "scripts": {
    "start": "PLATFORM_API_BASE_URL=https://platform.dev.paas.reapit.cloud ts-node-dev -r tsconfig-paths/register src/http-local",
    "test": "cross-env TZ=UTC jest --watch --colors --silent",
    "build": "tsc -p .",
    "bundle": "ts-bundler",
    "lint": "eslint --cache --ext=ts,js src",
    "check": "echo '...skipping...'",
    "publish": "echo '...skipping...'",
    "conf": "yarn config-manager --namespace cloud --entity graphql-server --name local --mode fetch",
    "commit": "yarn test --coverage --no-cache --silent --forceExit --detectOpenHandles --runInBand --watch=false && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges && yarn lint --fix && yarn check",
    "prepublish": "npm run snyk-protect",
    "snyk-protect": "snyk-protect",
    "release": "rpt-cdk deploy && echo '...ignoring stage flag...'",
    "synth": "rpt-cdk synth"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "express-graphql-header": "^1.0.1",
    "isomorphic-fetch": "^3.0.0",
    "swagger-to-graphql": "^4.0.2"
  },
  "devDependencies": {
    "@reapit/config-manager": "workspace:packages/config-manager",
    "@reapit/ts-bundler": "workspace:packages/ts-bundler",
    "@reapit/ts-scripts": "workspace:packages/ts-scripts",
    "@reapit/ts-types": "workspace:packages/ts-types",
    "@types/aws-serverless-express": "^3.3.5",
    "@types/graphql": "^14.5.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "bufferutil": "^4.0.6",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "eslint": "8.25.0",
    "eslint-plugin-prettier": "^4.2.1",
    "graphql-tag": "^2.12.6",
    "jest": "^28.1.3",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.8.4"
  },
  "resolutions": {
    "logform": "2.3.0"
  },
  "snyk": true
}
