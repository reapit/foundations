{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "/",
    "paths": {
      "@/*": ["src/*"],
      "@reapit/cognito-auth": ["../cognito-auth/src"],
      "@reapit/elements": ["../elements/src"],
      "@reapit/elements/*": ["../elements/*"],
      "logger": ["../../scripts/logger/sentry-logger.ts"]
    }
  },
  "include": ["src"],
  "exclude": [
    "public",
    "dist",
    "src/scripts",
    "node_modules",
    "src/tests/coverage",
    "src/tests/cypress"
  ]
}
