{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "baseUrl": "./",
    "sourceRoot": "/",
    "paths": {
      "@/*": ["src/*"],
      "@reapit/*": ["../*"]
    },
    "declaration": true,
    "declarationDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["public", "dist", "src/scripts", "node_modules", "src/tests/coverage"]
}
