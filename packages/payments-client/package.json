{
  "name": "payments-client",
  "description": "Payments Client For Sage Pay",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+git@github.com:reapit/foundations.git"
  },
  "license": "MIT",
  "author": "Author",
  "main": "./src/index.ts",
  "scripts": {
    "start": "webpack serve --hot --color --mode development",
    "test": "cross-env TZ=UTC jest --watch --colors --silent",
    "build": "rimraf public/dist && NODE_ENV=production webpack",
    "lint": "eslint --cache --ext=ts,tsx,js src",
    "check": "tsc --noEmit --skipLibCheck",
    "release": "serverless deploy",
    "publish": "echo '...skipping...'",
    "conf": "yarn config-manager --namespace cloud --entity payments-client --name local --mode fetch",
    "commit": "yarn test --coverage --no-cache --silent --forceExit --detectOpenHandles --runInBand --watch=false && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges && yarn lint --fix && yarn check"
  },
  "dependencies": {
    "@linaria/core": "^3.0.0-beta.15",
    "@linaria/react": "^3.0.0-beta.15",
    "@reapit/connect-session": "workspace:packages/connect-session",
    "@reapit/elements": "workspace:packages/elements",
    "@reapit/elements-legacy": "workspace:packages/elements-legacy",
    "@reapit/utils-common": "workspace:packages/utils-common",
    "@sentry/browser": "^6.19.7",
    "dayjs": "^1.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-ga": "^2.7.0",
    "react-router": "^5.3.3",
    "react-router-dom": "^5.3.3",
    "snyk": "^1.962.0",
    "swr": "^1.3.0",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@linaria/shaker": "^3.0.0-beta.15",
    "@reapit/config-manager": "workspace:packages/config-manager",
    "@reapit/ts-scripts": "workspace:packages/ts-scripts",
    "@reapit/ts-types": "workspace:packages/ts-types",
    "@testing-library/react": "^13.3.0",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "babel-jest": "^28.1.2",
    "babel-loader": "^8.2.5",
    "concurrently": "^6.5.1",
    "cross-env": "^6.0.3",
    "css-loader": "^6.7.1",
    "eslint": "8.19.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "jest-coverage-badges": "^1.1.2",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "rimraf": "^3.0.2",
    "serverless": "^2.72.3",
    "serverless-s3-deploy": "^0.10.1",
    "serverless-s3-remover": "^0.6.0",
    "serverless-single-page-app-plugin": "^1.0.4",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-dev-server": "^4.9.3"
  }
}
