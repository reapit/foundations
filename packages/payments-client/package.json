{
  "name": "payments-client",
  "description": "Payments Client For Sage Pay",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+git@github.com:reapit/foundations.git"
  },
  "license": "MIT",
  "author": "Author",
  "main": "./src/index.ts",
  "scripts": {
    "start": "webpack serve --hot --color --mode development",
    "test": "cross-env TZ=UTC jest --watch --colors --silent",
    "build": "rimraf public/dist && NODE_ENV=production webpack",
    "lint": "eslint --cache --ext=ts,tsx src --fix",
    "release": "serverless deploy",
    "publish": "echo '...skipping...'",
    "conf": "yarn config-manager --namespace cloud --entity payments-client --name local --mode fetch",
    "commit": "concurrently \"yarn test --coverage --no-cache --silent --forceExit --detectOpenHandles --runInBand --watch=false && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges\" \"yarn lint\""
  },
  "dependencies": {
    "@linaria/core": "^3.0.0-beta.4",
    "@linaria/react": "^3.0.0-beta.7",
    "@reapit/connect-session": "workspace:packages/connect-session",
    "@reapit/elements": "workspace:packages/elements",
    "@reapit/elements-legacy": "workspace:packages/elements-legacy",
    "@sentry/browser": "^6.9.0",
    "dayjs": "^1.10.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ga": "^2.7.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "snyk": "^1.661.0",
    "swr": "^0.5.6",
    "uuid": "^8.3.2",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@linaria/shaker": "^3.0.0-beta.7",
    "@reapit/config-manager": "workspace:packages/config-manager",
    "@reapit/ts-scripts": "workspace:packages/ts-scripts",
    "@reapit/ts-types": "workspace:packages/ts-types",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "cross-env": "^6.0.3",
    "eslint": "7.30.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-coverage-badges": "^1.1.2",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "rimraf": "^3.0.2",
    "serverless": "^2.28.0",
    "serverless-s3-deploy": "^0.10.0",
    "serverless-s3-remover": "^0.6.0",
    "serverless-single-page-app-plugin": "^1.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.0.3",
    "webpack": "^5.44.0",
    "webpack-dev-server": "^3.11.2"
  }
}
