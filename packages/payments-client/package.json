{
  "name": "payments-client",
  "description": "Payments Client For Sage Pay",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+git@github.com:reapit/foundations.git"
  },
  "license": "MIT",
  "author": "Author",
  "main": "./src/index.ts",
  "scripts": {
    "start": "webpack-dev-server --hot --color --mode development",
    "test": "cross-env TZ=UTC jest --watch --colors --silent",
    "build": "rimraf public/dist && NODE_ENV=production webpack",
    "lint": "eslint --cache --ext=ts,tsx src --fix",
    "release": "serverless deploy",
    "publish": "echo '...skipping...'",
    "conf": "yarn config-manager --namespace cloud --entity payments-client --name local --mode fetch",
    "commit": "concurrently \"yarn test --coverage --silent --forceExit --detectOpenHandles --runInBand --watch=false && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges\" \"yarn lint\""
  },
  "dependencies": {
    "@reapit/connect-session": "workspace:packages/connect-session",
    "@reapit/elements": "workspace:packages/elements",
    "dayjs": "^1.10.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "snyk": "^1.341.1",
    "swr": "^0.3.9"
  },
  "devDependencies": {
    "@reapit/config-manager": "workspace:packages/config-manager",
    "concurrently": "^5.3.0",
    "cross-env": "^6.0.3",
    "eslint": "7.11.0",
    "jest": "^26.6.1",
    "jest-coverage-badges": "^1.1.2",
    "rimraf": "^3.0.2",
    "serverless": "^2.23.0",
    "ts-jest": "^26.4.3",
    "typescript": "4.0.3",
    "webpack": "^4.41.5",
    "webpack-dev-server": "^3.11.0"
  }
}
