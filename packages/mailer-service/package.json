{
  "name": "mailer-service",
  "version": "1.0.0",
  "description": "Mailer Service",
  "main": "index.js",
  "repository": "git@github.com:reapit/mailer-service.git",
  "author": "ltran@reapit.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "check:ci": "concurrently \"tsc --noEmit\" \"eslint --cache --ext=ts,tsx src\"",
    "check:fix": "concurrently \"tsc --noEmit\" \"eslint --cache --ext=ts,tsx src --fix\"",
    "release:development": "serverless deploy --stage dev",
    "release:production": "serverless deploy --stage prod",
    "remove:development": "serverless remove --stage dev",
    "remove:production": "serverless remove --stage prod",
    "start:dev": "serverless offline --stage local --printOutput",
    "fetch-config": "yarn config-manager --namespace cloud --entity payments-server --name local --mode fetch"
  },
  "dependencies": {
    "aws-sdk": "^2.750.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "serverless-http": "^2.5.0"
  },
  "devDependencies": {
    "@reapit/config-manager": "^2.0.8",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/morgan": "^1.9.1",
    "serverless-deployment-bucket": "^1.3.0",
    "serverless-offline": "^6.7.0",
    "serverless-webpack": "^5.3.5"
  }
}
