{
  "name": "mailer-service",
  "version": "1.0.0",
  "description": "Mailer Service",
  "main": "index.js",
  "repository": "git@github.com:reapit/mailer-service.git",
  "author": "ltran@reapit.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn serverless offline start --runtime nodejs12.x --stage local --printOutput",
    "test": "cross-env TZ=UTC jest --watch --colors --silent",
    "build": "echo '...skipping...'",
    "lint": "eslint --cache --ext=ts,tsx src --fix",
    "release": "serverless deploy",
    "publish": "echo '...skipping...'",
    "conf": "yarn config-manager --namespace cloud --entity mailer-service --name local --mode fetch",
    "commit": "concurrently \"yarn test --coverage --no-cache --silent --forceExit --detectOpenHandles --runInBand --watch=false && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges\" \"yarn lint\""
  },
  "dependencies": {
    "@sentry/node": "^5.30.0",
    "aws-sdk": "^2.853.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "memorystore": "^1.6.5",
    "morgan": "^1.10.0",
    "serialize-error": "^7.0.1",
    "serverless-http": "^2.7.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@reapit/config-manager": "workspace:packages/config-manager",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "7.21.0",
    "jest": "^25.5.4",
    "jest-coverage-badges": "^1.1.2",
    "serverless": "^2.28.0",
    "serverless-deployment-bucket": "^1.3.0",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "webpack": "^4.46.0"
  }
}
