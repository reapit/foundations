{
  "name": "mailer-service",
  "version": "1.0.0",
  "description": "Mailer Service",
  "main": "index.js",
  "repository": "git@github.com:reapit/mailer-service.git",
  "author": "ltran@reapit.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "check:ci": "concurrently \"eslint --cache --ext=ts,tsx src\"",
    "check:fix": "concurrently \"eslint --cache --ext=ts,tsx src --fix\"",
    "release:development": "serverless deploy --stage dev",
    "release:production": "serverless deploy --stage prod",
    "remove:development": "serverless remove --stage dev",
    "remove:production": "serverless remove --stage prod",
    "start:dev": "yarn serverless offline start --stage local --printOutput",
    "test:dev": "cross-env TZ=UTC jest --watch",
    "install-db": "serverless dynamodb install",
    "fetch-config": "yarn config-manager --namespace cloud --entity mailer-service --name local --mode fetch",
    "test:ci": "cross-env TZ=UTC jest --ci --colors --coverage --silent --forceExit --detectOpenHandles --runInBand",
    "test:update-badges": "yarn test:ci && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges"
  },
  "dependencies": {
    "@sentry/node": "^5.24.2",
    "aws-sdk": "^2.750.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "memorystore": "^1.6.4",
    "morgan": "^1.10.0",
    "serialize-error": "^7.0.1",
    "serverless-http": "^2.5.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/ejs": "^3.0.5",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^25.1.2",
    "@types/morgan": "^1.9.1",
    "@types/uuid": "^8.3.0",
    "jest": "^25.1.0",
    "serverless": "^2.17.0",
    "serverless-deployment-bucket": "^1.1.2",
    "serverless-offline": "^6.7.0",
    "serverless-webpack": "^5.3.5"
  }
}
