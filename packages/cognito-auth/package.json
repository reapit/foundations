{
  "name": "cognito-auth",
  "version": "2.0.14",
  "description": "Simple wrapper around AWS Cognito for basic authentication flow",
  "main": "dist/index.js",
  "umd:main": "dist/cognito-auth.umd.production.js",
  "module": "dist/cognito-auth.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --coverage --silent",
    "test-dev": "jest --watch --verbose",
    "lint": "tslint --fix --project tsconfig.json --format stylish",
    "prepublish": "yarn test && yarn build",
    "prebuild": "rimraf dist && rimraf public",
    "build": "cross-env NODE_ENV=production tsdx build --format=cjs,esm,umd",
    "release:master": "node scripts/releaseMaster.js",
    "checkVersion": "node ./scripts/checkVersion.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reapit/cognitio-auth.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/reapit/cognitio-auth/issues"
  },
  "homepage": "https://github.com/reapit/cognitio-auth#readme",
  "dependencies": {
    "amazon-cognito-identity-js": "~3.0.13",
    "cors": "^2.8.5",
    "jsonwebtoken": "^8.5.1",
    "hardtack": "^4.1.2"
  },
  "devDependencies": {
    "@octokit/rest": "^16.35.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/jest": "~24.0.15",
    "@types/yaml": "^1.2.0",
    "compare-versions": "^3.5.1",
    "husky": "~3.0.0",
    "jest": "~24.8.0",
    "lint-staged": "~9.2.0",
    "prettier": "~1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "~24.0.2",
    "ts-node": "~8.3.0",
    "tsdx": "^0.11.0",
    "tslint": "~5.20.1",
    "tslint-config-prettier": "~1.18.0",
    "tslint-config-standard": "~9.0.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|src/core)[/\\\\]",
      "<rootDir>/src/app.ts",
      "<rootDir>/src/app.dev.ts",
      "<rootDir>/src/index.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|public|dist)[/\\\\]"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint",
      "git add"
    ]
  }
}
