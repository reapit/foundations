{
  "name": "event-status-service",
  "version": "1.0.0",
  "private": true,
  "description": "Service to maintain statuses of events sent to users",
  "repository": "git@github.com:reapit/event-status-service.git",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "serverless dynamodb install && yarn serverless offline start --stage local --printOutput",
    "test": "cross-env TZ=UTC jest --watch --colors --silent",
    "build": "echo '...skipping...'",
    "lint": "eslint --cache --ext=ts,tsx src --fix",
    "release": "serverless deploy",
    "publish": "echo '...skipping...'",
    "conf": "yarn config-manager --namespace cloud --entity event-status-service --name local --mode fetch",
    "commit": "concurrently \"yarn test --coverage --no-cache --silent --forceExit --detectOpenHandles --runInBand --watch=false && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges\" \"yarn lint\""
  },
  "dependencies": {
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@reapit/utils": "workspace:packages/utils",
    "@sentry/node": "^5.24.2",
    "@types/jest": "^26.0.20",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.750.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "jwt-decode": "^3.1.2",
    "morgan": "^1.10.0",
    "serialize-error": "^7.0.1",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-http": "^2.5.0"
  },
  "devDependencies": {
    "@reapit/config-manager": "workspace:packages/config-manager",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/express": "4.17.7",
    "@types/morgan": "^1.9.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "serverless": "^2.23.0",
    "serverless-deployment-bucket": "^1.1.2",
    "serverless-offline": "^6.7.0",
    "serverless-webpack": "^5.3.5",
    "webpack": "^4.41.5"
  }
}
