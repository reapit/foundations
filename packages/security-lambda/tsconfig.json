{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "types": [
      "jest",
      "node"
    ],
    "outDir": "../security-header-lambda/dist",
    "baseUrl": "../security-header-lambda",
    "paths": {
      "@/*": [
        "../security-header-lambda/src/*"
      ],
      "@reapit/node-utils": ["../utils/src/node/index.ts"]
    }
  },
  "include": [
    "../security-header-lambda/src/**/*"
  ],
  "exclude": [
    "../security-header-lambda/dist",
    "../security-header-lambda/node_modules",
    "../security-header-lambda/src/tests/coverage",
    "../security-header-lambda/src/**/*.test.ts"
  ]
}
