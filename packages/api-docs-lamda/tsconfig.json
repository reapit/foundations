{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "types": [
      "jest",
      "node"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@reapit/node-utils": ["../utils/src/node/index.ts"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./src/tests/coverage",
    "./src/**/*.test.ts"
  ]
}
