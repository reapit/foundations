{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@reapit/node-utils": ["../utils/src/node/index.ts"],
      "@reapit/connect-session": ["../connect-session/src"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./public",
    "./dist",
    "./node_modules",
    "./src/tests/coverage",
    "./src/**/*.test.ts",
    "./src/**/__mocks__",
    "./src/**/__stubs__"
  ]
}
