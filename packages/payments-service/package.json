    "@types/jest": "^25.1.2",
    "@types/morgan": "^1.9.1",
    "@types/uuid": "^8.3.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "7.11.0",
    "jest": "^25.1.0",
    "serverless": "^2.17.0",
    "serverless-deployment-bucket": "^1.1.2",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.7.0",
