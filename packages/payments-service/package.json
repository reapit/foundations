    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.839.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "memorystore": "^1.6.4",
    "morgan": "^1.10.0",
    "react": "^16.12.0",
