    "@reapit/utils-node": "workspace:packages/utils-node",
    "@sentry/node": "^6.19.7",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1167.0",
    "axios": "^0.27.2",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.3",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
