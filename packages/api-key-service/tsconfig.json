{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "/",
    "paths": {
      "@/*": ["src/*"],
      "@reapit/elements": ["../elements/src"],
      "@reapit/connect-session": ["../connect-session/src"],
      "@reapit/foundations-ts-definitions": ["../foundations-ts-definitions/types"],
      "@reapit/utils-node": ["../utils-node"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["public", "dist", "node_modules", "src/tests/coverage"]
}
