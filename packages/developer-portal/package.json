{
  "name": "developer-portal",
  "version": "1.0.0",
  "description": "Developer Portal for PAAS platform",
  "main": "./src/index.ts",
  "repository": "git@github.com:reapit/app-store.git",
  "author": "Will McVay <wmcvay@reapit.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --hot --color --mode development",
    "test": "cross-env TZ=UTC jest --watch --colors --silent",
    "build": "rimraf public/dist && NODE_ENV=production webpack",
    "lint": "eslint --cache --ext=ts,tsx src --fix",
    "release": "serverless deploy",
    "publish": "echo '...skipping...'",
    "conf": "yarn config-manager --namespace cloud --entity developer-portal --name local --mode fetch",
    "commit": "concurrently \"yarn test --coverage --silent --forceExit --detectOpenHandles --runInBand --watch=false && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges\" \"yarn lint\""
  },
  "dependencies": {
    "@reapit/connect-session": "workspace:packages/connect-session",
    "@reapit/elements": "workspace:packages/elements",
    "@reapit/utils": "workspace:packages/utils",
    "chart.js": "^2.9.3",
    "dayjs": "^1.10.4",
    "diff": "^4.0.1",
    "file-saver": "^2.0.2",
    "lodash.isequal": "^4.5.0",
    "lodash.orderby": "^4.6.0",
    "papaparse": "^5.1.1",
    "react": "^16.12.0",
    "react-chartjs-2": "^2.8.0",
    "react-dom": "^16.12.0",
    "react-responsive": "8.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "snyk": "^1.341.1",
    "swagger-ui-react": "^3.34.0"
  },
  "devDependencies": {
    "@reapit/config-manager": "workspace:packages/config-manager",
    "@reapit/foundations-ts-definitions": "workspace:packages/foundations-ts-definitions",
    "@snowpack/plugin-babel": "^2.1.6",
    "@types/nanoid": "^2.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^6.0.3",
    "eslint": "7.11.0",
    "jest": "^26.6.1",
    "jest-coverage-badges": "^1.1.2",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.2",
    "serverless": "^2.23.0",
    "webpack": "^4.41.5",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --ci --no-color"
    }
  },
  "lint-staged": {
    "!(**/cypress/**/*.{ts,tsx})/**/src/**/*.{ts,tsx}": [
      "yarn lint:src",
      "git add"
    ]
  },
  "browserslist": [
    "> 0.5%",
    "not IE 11",
    "chrome 69"
  ],
  "snyk": true
}
