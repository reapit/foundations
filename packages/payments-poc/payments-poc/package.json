{
  "name": "payments-poc",
  "version": "1.0.0",
  "description": "POC Stripe Gateway",
  "main": "index.js",
  "repository": "git@github.com:reapit/payments-poc.git",
  "author": "Will McVay <wmcvay@reapit.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "install:client": "cd payments-poc-client && yarn",
    "install:server": "cd payments-poc-server && yarn",
    "install:all": "concurrently \"yarn install:client\" \"yarn install:server\"",
    "client:dev": "cd payments-poc-client && yarn start",
    "server:dev": "cd payments-poc-server && yarn start",
    "start:dev": "concurrently \"yarn client:dev\" \"yarn server:dev\"",
    "build:client": "cd payments-poc-client && yarn build",
    "build:server": "serverless deploy",
    "deploy:development": "yarn build:client && yarn build:server"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "8.0.6",
    "concurrently": "^5.3.0",
    "serverless-deployment-bucket": "^1.1.2",
    "serverless-offline": "^6.7.0",
    "serverless-plugin-ifelse": "^1.0.5",
    "serverless-s3-deploy": "^0.9.0",
    "serverless-s3-remover": "^0.6.0",
    "serverless-single-page-app-plugin": "^1.0.2",
    "serverless-webpack": "^5.3.4",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "4.41.5"
  }
}
