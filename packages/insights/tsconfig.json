{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@reapit/connect-session": [
        "../connect-session/src"
      ],
      "@reapit/elements": [
        "../elements/src"
      ],
      "@reapit/elements/*": [
        "../elements/src/*"
      ],
      "@reapit/elements-legacy": ["../elements-legacy/src"]
    }
  },
  "include": [
    "src"
, "src/platform-api/.ts"  ],
  "exclude": [
    "public",
    "dist",
    "./webpack.config.js",
    "node_modules",
    "src/tests/coverage"
  ]
}
