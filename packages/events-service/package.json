{
  "name": "events-service",
  "version": "1.0.0",
  "private": true,
  "description": "Service to maintain statuses of events sent to users",
  "repository": "git@github.com:reapit/events-service.git",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "echo '...skipping...'",
    "commit": "yarn test --coverage --no-cache --silent --forceExit --detectOpenHandles --runInBand --watch=false && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges && yarn lint --fix && yarn check",
    "conf": "yarn config-manager --namespace cloud --entity events-service --name local --mode fetch",
    "lint": "eslint --cache --ext=ts,tsx,js src",
    "check": "tsc --noEmit --skipLibCheck",
    "publish": "echo '...skipping...'",
    "release": "serverless deploy",
    "deploy": "echo '...skipping...'",
    "start": "serverless dynamodb install && yarn serverless offline start --runtime nodejs12.x --stage local --printOutput",
    "test": "cross-env TZ=UTC jest --watch --colors --silent"
  },
  "dependencies": {
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "@reapit/utils-common": "workspace:packages/utils-common",
    "@reapit/utils-node": "workspace:packages/utils-node",
    "@sentry/node": "^6.16.1",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.949.0",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "jwt-decode": "^3.1.2",
    "morgan": "^1.10.0",
    "serialize-error": "^7.0.1",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-http": "^3.2.0",
    "twilio": "^4.19.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@reapit/config-manager": "workspace:packages/config-manager",
    "@reapit/ts-scripts": "workspace:packages/ts-scripts",
    "@reapit/ts-types": "workspace:packages/ts-types",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-jest": "^27.4.5",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "jest-coverage-badges": "^1.1.2",
    "serverless": "^2.69.1",
    "serverless-deployment-bucket": "^1.5.1",
    "serverless-offline": "^7.1.0",
    "serverless-plugin-log-retention": "^2.0.0",
    "serverless-webpack": "^5.6.0",
    "webpack": "^5.65.0"
  }
