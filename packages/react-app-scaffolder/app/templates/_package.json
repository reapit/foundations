{
  "name": "<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "main": "./src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+<%= repo %>"
  },
  "author": "<%= author %>",
  "license": "MIT",
  "private": true,
  "scripts": {
    <% if (isFoundation) { %>
    "build:prod": "node '../../scripts/webpack/webpack-sass-prod/index.js'",
    "start:dev": "webpack-dev-server --hot --progress --color --mode development --config ../../scripts/webpack/webpack.sass.dev.js",
    "release:dev": "node ../../scripts/release/release-dev.js lifetime-legal reapit-<%= name %>-dev",
    "release:prod": "node ../../scripts/release/release-prod.js lifetime-legal reapit-<%= name %>-dev"
    <% } else { %>
    "build:prod": "webpack --color --mode production --config './src/scripts/webpack-prod.js'",
    "start:dev": "webpack-dev-server --hot --progress --color --mode development --config ./src/scripts/webpack-dev.js",
    <% } %>
    "start:prod": "serve public/dist -s -l 8080",
    "test:ci": "cross-env TZ=UTC jest --ci --colors --coverage --silent --forceExit",
    "test:dev": "cross-env TZ=UTC jest --watch --verbose",
    "test:update-badges": "yarn test:ci && jest-coverage-badges --input src/tests/coverage/coverage-summary.json --output src/tests/badges"
  },
  <% if (isFoundation) { %>
  "dependencies": {},
  "devDependencies": {
    "@reapit/foundations-ts-definitions": "2020-02-13"
  }
  <% } else { %>
  "dependencies": {
    "@reapit/cognito-auth": "latest",
    "@reapit/elements": "latest",
    "dayjs": "latest",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2"

    <% if (redux) { %>
    ,"react-redux": "^7.1.3",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3"
    <% } %>

    <% if (stylesSolution === 'styledComponents') { %>
    ,"styled-components": "^4.3.2"
    <% } else { %>
      ,"css-loader": "^3.0.0",
      "loader-utils": "^1.2.3",
      "mini-css-extract-plugin": "^0.7.0",
      "node-sass": "^4.12.0",
      "purgecss": "^1.3.0",
      "purgecss-whitelister": "^2.4.0",
      "sass-loader": "^7.1.0",
      "style-loader": "^0.23.1"
    <% } %>
  },
  "devDependencies": {
    "babel-loader": "^8.0.6",
    "@babel/core": "^7.7.2",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@reapit/foundations-ts-definitions": "2020-02-13",
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^5.1.2",
    "@types/react-router-dom": "^5.1.2",
    "cross-env": "^7.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "favicons-webpack-plugin": "^2.1.0",
    "file-loader": "^3.0.1",
    "fork-ts-checker-notifier-webpack-plugin": "^1.0.0",
    "fork-ts-checker-webpack-plugin": "^1.3.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^25.1.0",
    "jest-config": "^25.1.0",
    "jest-fetch-mock": "^2.1.2",
    "lint-staged": "^8.1.7",
    "loader-utils": "^1.2.3",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.0.1",
    "raw-loader": "^3.1.0",
    "serve": "^11.3.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.0.1",
    "ts-node": "^8.3.0",
    "ts-paths-to-webpack-alias": "^0.3.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"

    <% if (redux) { %>
    ,"@redux-saga/testing-utils": "^1.0.5",
    "@types/react-redux": "^7.0.9"
    <% } %>

    <% if (stylesSolution === 'styledComponents') { %>
    ,"@types/styled-components": "^4.1.18"
    <% } %>
  }
  <% } %>
}
