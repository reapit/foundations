{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@reapit/cognito-auth": [
        "../cognito-auth/src"
      ],
      "@reapit/elements": [
        "../elements/src"
      ],
      "@reapit/elements/*": [
        "../elements/src/*"
      ],
      "@styles-variable": [
        "./src/core/__styles__/index.ts"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "public",
    "dist",
    "./webpack.config.js",
    "node_modules",
    "src/tests/coverage"
  ]
}
