{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*"],

  "exclude": [
    "./public",
    "./dist",
    "./node_modules",
    "./src/tests/coverage",
    "./src/**/*.test.ts",
    "./src/**/__mocks__"
  ]
}
