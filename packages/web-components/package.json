    "build:dev:search-widget:client": "rimraf ./public/dist && rollup -w -c './src/search-widget/rollup.config.client.js'",
    "build:dev:search-widget:server": "rimraf ./public/dist && rollup -w -c './src/search-widget/rollup.config.client.js'",
    "start:dev:search-widget": "run-p start:dev build:dev:search-widget:client build:dev:search-widget:server",
    "build:prod": "rimraf ./public/dist && build:prod:search-widget:client && build:prod:search-widget:server",
    "start:prod": "sirv public",
