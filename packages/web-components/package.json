{
  "name": "@reapit/web-components",
  "version": "0.0.4",
  "homepage": "https://github.com/reapit/foundations",
  "bugs": {
    "url": "https://github.com/reapit/foundations/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reapit/foundations.git"
  },
 
  "private": true,
  "devDependencies": {
    "@pyoner/svelte-ts-preprocess": "^1.2.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@testing-library/svelte": "^1.11.0",
    "@wessberg/rollup-plugin-ts": "^1.2.17",
    "npm-run-all": "^4.1.5",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "sirv-cli": "^0.4.5",
    "svelte-jester": "^1.0.4"
  },
  "dependencies": {
    "emotion": "^10.0.27",
    "svelte": "^3.19.0"
  },
  "scripts": {
    "build:prod:search-widget": "rollup -c './src/search-widget/rollup.config.js' --environment INCLUDE_DEPS",
    "build:prod": "rimraf ./public/dist && build:prod:search-widget",
    "start:prod": "sirv public",
    "start:dev": "sirv public --dev",
    "build:dev:search-widget": "rimraf ./public/dist && rollup -w -c './src/search-widget/rollup.config.js'",
    "start:dev:search-widget": "run-p start:dev build:dev:search-widget",
    "test:dev": "jest --watch --color",
    "test:ci": "jest --color"
  }
}
