{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*", "public/*"
  ],
  "compilerOptions": {
    "types": [
      "svelte",
      "jest",
      "node",
      "googlemaps"
    ],
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types", "./src/types"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@reapit/node-utils": [
        "../utils/src/node/index.ts"
      ]
    }
  }
}
