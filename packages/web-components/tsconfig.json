{
  "include": ["src/**/*", "rollup.config.base.js"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "moduleResolution": "node",
    "types": ["svelte", "jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
