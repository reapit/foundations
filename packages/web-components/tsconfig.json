{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist-npm",
    "declaration": true,
    "sourceRoot": "/",
    "declarationDir": "dist-npm",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@reapit/cognito-auth": ["../cognito-auth/src"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "validate": false
      }
    ],
    "resolveJsonModule": true,
    "rootDirs": ["src"],
    "skipLibCheck": true,
    "target": "es5"
  }
}
