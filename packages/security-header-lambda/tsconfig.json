{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@reapit/*": ["../*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist", "./node_modules", "./src/tests/coverage", "./src/**/*.test.ts"]
}
