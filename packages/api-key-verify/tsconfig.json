{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./src/core/definitions.d.ts", "node_modules/@types", "../../node_modules/@types"],
    "baseUrl": "./",
    "sourceRoot": "/",
    "paths": {
      "@reapit/utils-nest": ["../utils-nest/src"]
    },
    "declaration": true,
    "declarationDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
