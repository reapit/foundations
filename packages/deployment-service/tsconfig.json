{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "strict": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@reapit/connect-session": ["../connect-session/src"],
      "@reapit/utils-node": ["../utils-node"]
    }
  },
  "exclude": ["public", "dist", "scripts", "**/node_modules", "coverage", "archive/**/*", "**/__tests__/**/*"]
}
